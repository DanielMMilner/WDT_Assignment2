@model IEnumerable<ASR.Models.Slot>

@{
    ViewData["Title"] = "Availability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Availability</h2>
<h4>This Staff member has empty slots from @ViewBag.StartDate to @ViewBag.EndDate at the following times:</h4>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Room)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Staff)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student)
                        </th>
                        <th>Book</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Room.RoomName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.SchoolID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.SchoolID)
                                </td>
                                <td>
                                    @Html.ActionLink("Book", "Book","Booking", new { slotID = item.SlotID })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                <p>This staff member has no slots during this time period</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
