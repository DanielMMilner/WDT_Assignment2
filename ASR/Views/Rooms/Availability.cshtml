@model IEnumerable<ASR.Models.Room>

@{
    ViewData["Title"] = "Availability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Availability</h2>
<h4>These rooms are avaliable on @ViewBag.Date</h4>
<div class="row">
    <div class="col-lg-5">
        <div class="alert alert-info">
            <strong>Reminder!</strong> A room can have a maximum of two slots per day.
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Room Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomName)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                <p>This room has no bookings on this day</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
