@model ASR.Models.Room

@{
    ViewData["Title"] = "Room availability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Room availability</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Availability">
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Start Date</label>
                <input required name="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="form-group">
                <label class="control-label">End Date</label>
                <input required name="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
