@model ASR.Models.Slot

@{
    ViewData["Title"] = "Cancel Booking";
}

<h2>Cancel Booking</h2>

<h3>Are you sure that you want to cancel this booking?</h3>
<div>
    <h4>Slot</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.RoomID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Staff)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Staff.SchoolID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.SchoolID)
        </dd>
    </dl>
    
    <form asp-action="Cancel">
        <input type="hidden" asp-for="SlotID" />
        <input type="submit" value="Cancel" class="btn btn-default" /> |
        <a asp-action="Index">Back to Bookings</a>
    </form>
</div>
