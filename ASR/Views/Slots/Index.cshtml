@model IEnumerable<ASR.Models.Slot>

@{
    ViewData["Title"] = "Slots";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <h4>Filter Slots</h4>
        <div class="well">
            <form asp-controller="Slots" asp-action="Index" method="get">
                <div class="form-group">
                    <label class="control-label">Start Date</label>
                    <input required name="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group">
                    <label class="control-label">End Date</label>
                    <input required name="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-filter"></span> Filter
                    </button>
                </div>
            </form>
        </div>
        <div class="btn-group btn-group-lg btn-group-justified">
            <a asp-action="Create" class="btn btn-default">Create New</a>
            <a asp-action="Schedule" class="btn btn-default">My schedule</a>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-default">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Room)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Staff)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room.RoomName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.SchoolID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.SchoolID)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { slotID = item.SlotID }) |
                                @Html.ActionLink("Details", "Details", new { slotID = item.SlotID })
                                @if (item.StudentID == null)
                                {
                                    @Html.ActionLink("| Delete", "Delete", new { slotID = item.SlotID })
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
